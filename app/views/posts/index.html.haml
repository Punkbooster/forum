#navigation
	= link_to "Latest", recent_posts_path, class: "link"
	= link_to "Unanswered", unanswered_posts_path, class: "link"
	= link_to "Active", active_posts_path, class: "link"

#posts
	- @posts.each do |post|
		.post 
			%h2.title
				= link_to post.title, post
			%p.comments_comment	
				= post.comments.size
			%p.date 
				Published at:
				=time_ago_in_words(post.created_at)
				by
				= post.user.email

= will_paginate @posts, renderer: BootstrapPagination::Rails, previous_label: "Older", next_label: "Newer", inner_window: 0, outer_window: 0; 			 

	